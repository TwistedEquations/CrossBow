<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="30dp"
        tools:context=".ActivityMain">

        <Button
            android:id="@+id/json_load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/json_load" />

        <Button
            android:id="@+id/asset_image_load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/asset_image_load" />

        <Button
            android:id="@+id/network_image_load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/network_image_load" />

        <Button
            android:id="@+id/network_image_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/network_image_list" />

        <Button
            android:id="@+id/compare_loaders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compare Laoders" />

        <Button
            android:id="@+id/sync_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sync Request" />

        <Button
            android:id="@+id/rx_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rx Request" />

    </LinearLayout>
</ScrollView>